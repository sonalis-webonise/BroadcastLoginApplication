<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.webonise.broadcastsample">

    <application
        android:name=".MyApplicationConfig"
        android:allowBackup="true"
        android:icon="@mipmap/android_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".ActivityMenu"
            android:label="@string/title_activity_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".InventoryFormActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.webonise.broadcastsample.ACTION_LOGOUT"></action>
            </intent-filter>
        </receiver>


    </application>

</manifest>